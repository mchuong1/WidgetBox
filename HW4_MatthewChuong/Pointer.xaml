<UserControl x:Class="HW4_MatthewChuong.Pointer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HW4_MatthewChuong"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Slider x:Name="xSlider" Margin="10,10,115,0" VerticalAlignment="Top" IsSnapToTickEnabled="True"/>
        <Slider x:Name="ySlider" Margin="10,33,115,0" VerticalAlignment="Top" IsSnapToTickEnabled="True"/>
        <Slider x:Name="zSlider" Margin="10,56,115,0" VerticalAlignment="Top" IsSnapToTickEnabled="True"/>
        <Button x:Name="PointerSubmitButton" Content="Submit" HorizontalAlignment="Right" Margin="0,36,10,0" VerticalAlignment="Top" Width="75" Click="PointSubmit"/>
    </Grid>
</UserControl>
